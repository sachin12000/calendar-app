{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "../../build-prod",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "../../build-prod/README.md"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "host": "127.0.0.1",
      "port": 9099
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
